--@Class Elements
--@Extends BaseClass
--Author H4X0RZ

function Elements:new()
	error("Nope",0)
end

Elements.NONE = -1
Elements.FIRE = 1
Elements.WATER = 2
Elements.AIR = 3
Elements.LIGHT = 4
Elements.SHADOW = 5
Elements.VOID = 6

Elements.FIRE_COLOR = colors.red
Elements.WATER_COLOR = colors.blue
Elements.AIR_COLOR = colors.green
Elements.LIGHT_COLOR = colors.orange
Elements.SHADOW_COLOR = colors.purple
Elements.VOID_COLOR = colors.gray

Elements.FIRE_SH = "FR"
Elements.WATER_SH = "WT"
Elements.AIR_SH = "AR"
Elements.LIGHT_SH = "LT"
Elements.SHADOW_SH = "SW"
Elements.VOID_SH = "VD"

function Elements:getElements()
	return {
		self.FIRE,
		self.WATER,
		self.AIR,
		self.LIGHT,
		self.SHADOW,
		self.VOID
	}
end

function Elements:getColors()
	return {
		self.FIRE_COLOR,
		self.WATER_COLOR,
		self.AIR_COLOR,
		self.LIGHT_COLOR,
		self.SHADOW_COLOR,
		self.VOID_COLOR
	}
end

function Elements:getShorts()
	return {
		self.FIRE_SH,
		self.WATER_SH,
		self.AIR_SH,
		self.LIGHT_SH,
		self.SHADOW_SH,
		self.VOID_SH
	}
end